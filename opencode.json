{
  "$schema": "https://opencode.ai/config.json",
  "model": "frames/minimax/minimax-m2.5",
  "agent": {
    "build": {
      "model": "frames/minimax/minimax-m2.5",
      "max_steps": 50
    }
  },
  "provider": {
    "frames": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Frames Registry",
      "options": {
        "baseURL": "https://registry.frames.ag/api/service/openrouter/v1",
        "apiKey": "{env:FRAMES_API_KEY}"
      },
      "models": {
        "minimax/minimax-m2.5": {
          "name": "MiniMax M2.5",
          "limit": { "context": 1000000, "output": 65536 }
        }
      }
    }
  },
  "permission": {
    "bash": "allow",
    "write": "allow",
    "read": "allow"
  }
}
